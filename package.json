{
  "name": "claude-code-toolkit",
  "version": "5.0.0",
  "description": "Claude Code toolkit v5.0 - RAG indexer, read optimizer, token budget, context optimization",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "claude-toolkit": "./dist/cli.js",
    "claude-toolkit-search": "./dist/search.js"
  },
  "scripts": {
    "build": "tsc",
    "postinstall": "tsc && node dist/postinstall.js",
    "dev": "tsx src/cli.ts",
    "rag:index": "node dist/cli.js index -d ../..",
    "rag:context": "node dist/search.js context -d ../..",
    "rag:expand": "node dist/search.js expand -d ../..",
    "rag:deps": "node dist/search.js deps -d ../..",
    "rag:diff": "node dist/search.js diff -d ../..",
    "rag:commit": "node dist/search.js commit -d ../..",
    "rag:watch": "node dist/search.js watch -d ../..",
    "rag:memory": "node dist/search.js memory -d ../..",
    "rag:session": "node dist/search.js session -d ../..",
    "rag:errors": "node dist/search.js errors -d ../..",
    "rag:snippets": "node dist/search.js snippets -d ../..",
    "rag:template": "node dist/search.js template -d ../..",
    "rag:stats": "node dist/search.js stats -d ../..",
    "rag:cache": "node dist/search.js cache -d ../..",
    "rag:budget": "node dist/search.js budget -d ../..",
    "rag:hypothesis": "node dist/search.js hypothesis -d ../..",
    "rag:context-lock": "node dist/search.js context-lock -d ../..",
    "rag:optimizer": "node dist/search.js optimizer -d ../..",
    "rag:contracts": "node dist/search.js contracts -d ../..",
    "rag:locality": "node dist/search.js locality -d ../..",
    "rag:importance": "node dist/search.js importance -d ../..",
    "rag:risk": "node dist/search.js risk -d ../..",
    "rag:prune-path": "node dist/search.js prune-path -d ../..",
    "rag:install": "node dist/postinstall.js"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "chalk": "^5.6.2",
    "commander": "^12.1.0",
    "glob": "^10.5.0",
    "sharp": "^0.34.5",
    "ts-morph": "^27.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.19.27",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
